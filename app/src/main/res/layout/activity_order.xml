<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EFFFEF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="餐桌"
                android:textColor="@color/black"
                android:textSize="10pt" />

            <Spinner
                android:layout_width="200dp"
                android:layout_height="60dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="用餐人数" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:hint="备注" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/sum"
            android:textColor="#FF0000"
            android:textSize="12pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="0"
            android:textColor="#FF0000"
            android:textSize="12pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dish"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:backgroundTint="#F2C087"
            android:drawableLeft="@mipmap/ic_coffee"
            android:text="点菜"
            android:textColor="@color/black"
            android:textSize="8pt"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/btn_cancel_2"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#98F28E"
            android:drawableLeft="@mipmap/ic_save"
            android:text="下单"
            android:textColor="@color/black"
            android:textSize="8pt"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/btn_order"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#C6C7C8"
            android:drawableLeft="@mipmap/ic_back"
            android:text="@string/取消"
            android:textColor="@color/black"
            android:textSize="8pt"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
</LinearLayout>
