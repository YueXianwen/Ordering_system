<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QueryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EFFFEF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="餐桌："
                android:textColor="@color/black"
                android:textSize="10pt" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:hint="请输入桌号......" />

            <CheckBox
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:text="空桌"
                android:textSize="8pt"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dish"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:backgroundTint="#87C7F2"
            android:drawableLeft="@mipmap/ic_search"
            android:text="@string/查询"
            android:textColor="@color/black"
            android:textSize="8pt"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/btn_order3"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:backgroundTint="#C6C7C8"
            android:drawableLeft="@mipmap/ic_back"
            android:text="@string/取消"
            android:textColor="@color/black"
            android:textSize="8pt"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

</LinearLayout>